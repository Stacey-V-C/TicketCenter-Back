{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "module": "CommonJS",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./src",                                  /* Specify the root folder within your source files. */
     "outDir": "./dist",  
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,   
  },
}
